<h1>Novo Produto</h1>
<%= form_with(model: @produto, local: true) do |form| %>
  <% if @produto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@produto.errors.count, "erro") %> proibiu este produto de ser salvo:</h2>
      <ul>
        <% @produto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>
  <div class="field">
    <%= form.label :descricao %>
    <%= form.text_area :descricao %>
  </div>
  <div class="field">
    <%= form.label :preco %>
    <%= form.number_field :preco, step: 0.01 %>
  </div>
  <div class="field">
    <%= form.label :estoque %>
    <%= form.number_field :estoque %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>