<%= form.fields_for :itens_venda, ItemVenda.new, child_index: '__INDEX__' do |item_form| %>
  <div class="nested-fields">
    <div class="field">
      <%= item_form.label :produto_id, "Produto" %>
      <%= item_form.collection_select :produto_id, Produto.all, :id, :nome, prompt: "Selecione um produto" %>
    </div>
    <div class="field">
      <%= item_form.label :quantidade %>
      <%= item_form.number_field :quantidade %>
    </div>
    <%= item_form.hidden_field :_destroy %>
    <%= link_to "Remover", '#', class: 'remove_fields' %>
  </div>
<% end %>