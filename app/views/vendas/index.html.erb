<h1>Vendas</h1>
<% if @vendas.present? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Cliente</th>
        <!-- Outros cabeÃ§alhos de coluna, se necessÃ¡rio -->
      </tr>
    </thead>
    <tbody>
      <% @vendas.each do |venda| %>
        <tr>
          <td><%= venda.id %></td>
          <td><%= venda.cliente.nome %></td>
          <!-- Outras colunas da venda -->
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nenhuma venda encontrada.</p>
<% end %>